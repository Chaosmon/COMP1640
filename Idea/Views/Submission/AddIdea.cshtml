@model Idea.Models.NIdea

@{
    ViewData["Title"] = "Add Idea";
}

<h1>Add Idea</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="AddIdea" enctype="multipart/form-data" class="bg-light border p-3">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <input type="hidden" asp-for="SubmissionId" class="form-control" value="@ViewBag.SubmissionId">
            <input type="hidden" asp-for="UserId" class="form-control" value="@ViewBag.UserId">
            <input type="hidden" asp-for="View" class="form-control" value="0" />
            <input type="hidden" asp-for="FilePath" value="" class="form-control" />

            <div class="form-group">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brief" class="control-label">Brief</label>
                <input asp-for="Brief" class="form-control" />
                <span asp-validation-for="Brief" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">Content</label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">File</label>
                <input type="file" name="file" class="form-control-file" />
            </div>

            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="isAcceptTerms" name="isAcceptTerms" value="True" />
                <label class="form-check-label" for="isAcceptTerms">I accept the terms and conditions</label>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>

            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="ViewIdeas" asp-route-submissionid="@ViewBag.SubmissionId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}